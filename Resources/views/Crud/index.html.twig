{% extends 'ViwebSystemBundle:_layout/admin:layout.html.twig' %}

{% import 'ViwebSystemBundle:Macro:headers.html.twig' as headers %}

{% set definition = resources.definition %}
{% set data = resources.data %}

{% set header = configuration.vars.header|default(metadata.applicationName~'.ui.'~metadata.pluralName) %}

{% block title %}{{ parent() }} {{ header|trans }}{% endblock %}
{% block content_title %}
    <h1>{{ metadata.name }}
    {% for action in definition.getActions('main') %}
        {{ sylius_grid_render_action(resources, action, null) }}
    {% endfor %}
    </h1>
{% endblock %}
{% block main_content %}
    <div class="row-fluid">
        <div class="span12">
            <div class="widget-box">
                <div class="widget-title"> <span class="icon"> <i class="icon-th"></i> </span>
                    <h5>{{ metadata.name }}</h5>
                </div>
                <div class="widget-content nopadding">
                    {% include '@ViwebSystem/Crud/Index/_content.html.twig' %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
