<script>
    $(function() {
        $('[data-prototype]').each(function(i){
            that = this;
            $(this).prepend("<a class='btn btn-info' href='#' id='add_button_" + i +"'>Ajouter</a>");
            $(this).on('click', '#add_button_' + i, function(e){
                e.preventDefault();
                cnt = $(that).find('.control-group').length;
                toAdd = $(that).attr('data-prototype').replace('__name__label__', 'nouvel element').replace(/__name__/g, cnt);
                $(that).append(toAdd);
            })
        });

        $('textarea').trumbowyg({
            semantic: false,
            removeformatPasted: true,
            btns: [
                ['viewHTML'],
                ['custom_formatting'],
                'btnGrp-semantic',
                ['superscript', 'subscript'],
                ['link'],
                ['insertImage'],
                'btnGrp-justify',
                'btnGrp-lists',
                ['horizontalRule'],
                ['removeformat'],
                ['fullscreen']
            ],
            btnsDef: {
                // Customizables dropdowns
                custom_formatting: {
                    dropdown: ['p', 'blockquote', 'h1', 'h2', 'h3', 'h4', 'h5'],
                    ico: 'p'
                },
                h5: {
                    fn: 'formatBlock',
                    title: 'Header 5'
                }
            }
        });
    });

</script>